{
  "manifest_version": 3,
  "name": "TeamMessenger",
  "version": "1.0.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "assets/icons/favicon-32x32.png",
    "default_popup_width": 500,
    "default_popup_height": 500
  },
  "permissions": ["storage", "offscreen", "notifications", "action"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "assets/icons/favicon-16x16.png",
    "32": "assets/icons/favicon-32x32.png",
    "48": "assets/icons/android-chrome-192x192.png",
    "128": "assets/icons/android-chrome-512x512.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "offscreen.html",
        "offscreen.js",
        "assets/sounds/clunk-notification-alert_D_major.wav"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
