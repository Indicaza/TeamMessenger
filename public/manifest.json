{
  "manifest_version": 3,
  "name": "TeamMessenger",
  "version": "1.0.0",
  "description": "Displays organization-wide messages from an admin to users.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "alarms", "notifications"],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}
